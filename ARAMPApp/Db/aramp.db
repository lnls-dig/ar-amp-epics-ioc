######################################################################
# Reset to default state

record(bo, "$(P)$(R)Reset") {
  field(DESC, "Reset to default state")
  field(DTYP, "stream")
  field(ZNAM, "0")
  field(ONAM, "1")
  field(HIGH, "1")
  field(OUT, "@aramp.proto reset $(PORT)")
}

######################################################################
# Power status control (On/Off)

record(bo, "$(P)$(R)Power") {
  field(DESC, "Power Control (On/Off)")
  field(DTYP, "stream")
  field(ZNAM, "Off")
  field(ONAM, "On")
  field(OUT, "@aramp.proto setOnOff $(PORT)")
}

######################################################################
# Gain control
record(ao, "$(P)$(R)Gain") {
  field(DESC, "Gain Control [28-53.5 dB]")
  field(DTYP, "Soft Channel")
  #field(DRVH, "53.5")
  #field(DRVL, "28.0")
  field(EGU, "dB")
  field(FLNK, "$(P)$(R)ConvGain2Step")
}

######################################################################
# Gain control
record(calc, "$(P)$(R)ConvGain2Step") {
  field(DESC, "Convert Gain value in steps")
  field(EGU, "dB")
  field(INPA, "$(P)$(R)Gain.VAL")
  field(CALC, "FLOOR(-4.433*(10^6) + (4299+4.433*(10^6))/(1+10^((-60.799-A)*0.0496)))")
  field(FLNK, "$(P)$(R)GainStep")
}

######################################################################
# Gain control
record(ao, "$(P)$(R)GainStep") {
  field(DESC, "Gain Control in Steps [0-4095]")
  field(DTYP, "stream")
  field(OMSL, "closed_loop")
  field(DOL, "$(P)$(R)ConvGain2Step.VAL PP")
  field(DRVH, "4095")
  field(DRVL, "0")
  field(EGU, "steps")
  field(OUT, "@aramp.proto setGain $(PORT)")
}
